<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearTopo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_marinho"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VocÃª finalizou sua chamada! Deseja registrar sua aula?"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearTopo"
        android:layout_centerHorizontal="true"
        android:paddingTop="40dp"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/btnSim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIM\nRegistrar agora"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnNao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAO\nRegistrar depois"/>

    </LinearLayout>

</RelativeLayout>